<?xml version="1.0" encoding="utf-8"?>

<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
             xmlns:s="library://ns.adobe.com/flex/spark"
             xmlns:c="ui.components.*">

    <fx:Metadata>
		<![CDATA[
        [HostComponent("spark.components.Button")]
        ]]>
	</fx:Metadata>

    <s:states>
        <s:State name="up"/>
        <s:State name="over"/>
        <s:State name="down"/>
        <s:State name="disabled"/>
    </s:states>


    <s:Ellipse width="30"
               height="30"
               includeInLayout="false"
               x="{icon.x + icon.width/2 - 30/2}"
               y="{icon.y + icon.height/2 - 30/2}">
        <s:fill>
            <s:SolidColor color="{Color.themeSecondary}"
                          alpha="0"/>
        </s:fill>
    </s:Ellipse>

    <c:ColorBitmapImage id="icon"
                        color="{Color.textLow}"
                        color.over="{Color.textMedium}"
                        color.down="{Color.textLow}"
                        source="{Icons.SliderThumb}"/>

    <fx:Script><![CDATA[
        import global.Color;
        import global.Icons;
        ]]></fx:Script>
</s:SparkSkin>